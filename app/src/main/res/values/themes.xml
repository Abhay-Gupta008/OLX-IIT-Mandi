    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>



